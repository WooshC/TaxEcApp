@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h2>Iniciar Sesión</h2>

<form asp-action="Index" method="post">
    <div>
        <label>Usuario</label>
        <input name="nombreUsuario" class="form-control" required />
    </div>
    <div>
        <label>Contraseña</label>
        <input name="contrasena" type="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Ingresar</button>

    @if (ViewBag.Error != null)
    {
        <div class="text-danger mt-2">@ViewBag.Error</div>
    }
</form>
